<%- include('../partials/header') %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">Email Verification</h2>
                </div>
                <div class="card-body text-center">
                    <% if (locals.error) { %>
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            <%= error %>
                        </div>
                        <div class="mt-3">
                            <p>The verification link may have expired or is invalid.</p>
                            <p>Please request a new verification email or contact support.</p>
                        </div>
                    <% } %>
                    <% if (locals.success) { %>
                        <div class="alert alert-success">
                            <i class="fas fa-check-circle me-2"></i>
                            <%= success %>
                        </div>
                        <div class="mt-3">
                            <i class="fas fa-envelope-open-text fa-4x mb-3 text-success"></i>
                            <h4>Email Verified Successfully!</h4>
                            <p>Your email has been verified. You can now access all features of your account.</p>
                        </div>
                    <% } %>
                    <div class="mt-4">
                        <a href="/login" class="btn btn-primary">
                            <i class="fas fa-sign-in-alt me-2"></i>Proceed to Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %> 